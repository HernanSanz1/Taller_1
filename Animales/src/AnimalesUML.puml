@startuml
allowmixing

class main {
    +main(args: String[]): void
}

class Animales {
    -tipo: String
    -raza: String
    -Nombre: String
    -peligroso: String
    +getTipo(): String
    +setTipo(tipo: String): void
    +getRaza(): String
    +setRaza(raza: String): void
    +getNombre(): String
    +setNombre(nombre: String): void
    +getPeligroso(): String
    +setPeligroso(peligroso: String): void
    +detalleanimales(): String
}

